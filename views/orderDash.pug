head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Massajja Ufarm
  link(rel='stylesheet' href='css/bootstrap/bootstrap.css')
  link(rel='stylesheet' href='css/style.css')
nav.navbar.navbar-expand-lg.navbar-light(style='background-color: #6B8E23;')
  a.navbar-brand(href='welcome2') Ufarm
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item.active
        a.nav-link(href='welcome2')
          | Home 
          span.sr-only (current)
      li.nav-item
        a.nav-link(href='aboutUfarm') About Us
      li.nav-item
        a.nav-link(href='contactUfarm') Contact Us
body
  header.card-header
        h4.card-title Orders made
        |&nbsp
  .row
        if items.length
        each item in items
            .card.productcard(style='width: 15rem;')
              .card-body
                  h5.card-title Product Name: #{item.productName}
                  p.card-texts Unit Price: #{item.price}
                  p.card-texts Quantity:#{item.quantity}
                  p.card-texts Customer Contact: #{item.customerContact}  
                  p.card-texts Payment Mode:#{item.paymentMode}
                  p.card-texts Delivery:#{item.delivery}
script(src='js/jquery-3.5.1.slim.min.js')
script(src='js/popper.min.js')
script(src='js/bootstrap/bootstrap.js')