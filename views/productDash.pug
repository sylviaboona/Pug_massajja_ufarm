head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Massajja Ufarm
  link(rel='stylesheet' href='css/bootstrap/bootstrap.css')
  link(rel='stylesheet' href='css/style.css')
nav.navbar.navbar-expand-lg.navbar-light(style='background-color: #6B8E23;')
  a.navbar-brand(href='welcome2') Ufarm
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item.active
        a.nav-link(href='welcome2')
          | Home 
          span.sr-only (current)
      li.nav-item
        a.nav-link(href='aboutUfarm') About Us
      li.nav-item
        a.nav-link(href='contactUfarm') Contact Us
body
  header.card-header
        h4.card-title Products available on the Market
        |&nbsp
  .row
        if items.length
        each item in items
            .card.productcard(style='width: 15rem;')
              img.card-img-top(src='/uploads/' + item.productImage, alt="" height='170px' width='100px')
              .card-body
                  h6.card-title Product name: #{item.productName}
                  p.card-text Description: #{item.productDescription}
                  p.card-text Unit Price: #{item.price}
                  p
                    b.card-text Quantity:#{item.quantity}
                  p.card-text Contact: #{item.phoneContact}
                  p Ward #{item.ward}
                  a#orderBTN(href=`orderForm/?id=${item._id}`) Order
script(src='js/jquery-3.5.1.slim.min.js')
script(src='js/popper.min.js')
script(src='js/bootstrap/bootstrap.js')
script(src='./js/validateMassajaUfarm.js')