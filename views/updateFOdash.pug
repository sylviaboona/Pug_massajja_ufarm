head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Massajja Ufarm
  link(rel='stylesheet' href='./css/bootstrap/bootstrap.css' type='text/css')
  link(rel='stylesheet' href='./css/style.css' type='text/css')
nav.navbar.navbar-expand-lg.navbar-light(style='background-color: #6b8e23')
  a.navbar-brand(href='welcome') Ufarm
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item.active
        a.nav-link(href='welcome')
          | Home 
          span.sr-only (current)
      li.nav-item
        a.nav-link(href='contactUfarm') Contact Us
      li.nav-item
        a.nav-link(href='aboutUfarm' tabindex='-1' aria-disabled='true') About Us
form(method="post" action="/update?id="+ufarmer._id)
  img.formImages(src='img/greenLeafSideImage1.png' alt='')
  h4#registerFO Update Urban Farmer Information Here
  .form-row
    .form-group.col-md-4
      label First Name
      input#inputFirstName.form-control(value = ufarmer.firstNameUF name ="firstNameUF")
    .form-group.col-md-4
      label Last Name
      input#inputLastName.form-control(value = ufarmer.lastNameUF name ="lastNameUF")
    .form-group.col-md-4
      label User Name
      input#inputUserName.form-control(value = ufarmer.userNameUF name ="userNameUF")
  .form-row
    .form-group.col-md-6
      label Date of Birth
      input#inputDOB.form-control(value = ufarmer.dobUF name ="dobUF")
    .form-group.col-md-6
      label Date of Registration
      input#inputDOR.form-control(value = ufarmer.dorUF name ="dorUF")
  .form-row
    .form-group.col-md-6
      label Farmer ID
      input#inputFOnumber.form-control(value = ufarmer.idNumber name ="idNumber")
    .form-group.col-md-6
      label Farmer NIN
      input#inputNIN.form-control(value = user.ufNIN name ="ufNIN")
  .form-row
    .form-group.col-md-4
      label Contact
      input#inputPhoneNumber.form-control(value = ufarmer.phoneNumberUF name ="phoneNumberUF")
    .form-group.col-md-4
      label Contact 2
      input#inputPhoneNumber.form-control(value = ufarmer.phoneNumberUF2 name ="phoneNumberUF2")
    .form-group.col-md-4
      label Ward
      select#inputWard.form-control(name='wardUF')
        option(value="Busabala" selected = ufarmer.wardUF === "Busabala") Busabala
        option(value="Massajja" selected = ufarmer.wardUF === "Massajja") Massajja
        option(value="Kikajjo" selected = ufarmer.wardUF === "Kikajjo") Kikajjo
        option(value="Namasuba" selected = ufarmer.wardUF === "Namasuba") Namasuba
  .form-check.form-check-inline
    input#horticultureProduce.form-check-input(value= "Horticulture" type="checkbox" checked = ufarmer.produceType==="Horticulture" name="produceType")
    label.form-check-label(for='inlineCheckbox1') Horticulture Produce
  .form-check.form-check-inline
    input#poultryProducts.form-check-input(value= "Poultry" type="checkbox" checked = ufarmer.produceType==="Poultry" name="produceType")
    label.form-check-label(for='inlineCheckbox2') Poultry products
  .form-check.form-check-inline
    input#diaryProducts.form-check-input(value= "Diary" type="checkbox" checked = ufarmer.produceType==="Diary" name="produceType")
    label.form-check-label(for='inlineCheckbox3') Diary Products
  .form-group
    .form-check-inline
      input#genderM.form-check-input(value= "Male" type="radio" checked = ufarmer.gender==="Male" name="gender")
      label.form-check-label(for='genderM')  Male 
    .form-check-inline
      input#genderF.form-check-input(value= "Female" type="radio" checked = ufarmer.gender==="Female" name="gender")
      label.form-check-label(for='genderF')  Female 
  button#registerFO.btn.btn-primary(type='submit')
    | Update
  br
script(src='./js/jquery-3.5.1.slim.min.js')
script(src='./js/popper.min.js')
script(src='./js/bootstrap/bootstrap.js')
script(src='./js/massajaUfarm.js')
